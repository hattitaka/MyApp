@model MyApp.Areas.Admin.Models.User
@{
    ViewBag.Title = "LoginPage";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
        <h2>LoginPage</h2>
        @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
        {
            <div class="form-group col-md-11 col-md-offset-1">
                <label for="inputId">ID</label>
                @Html.TextBox(
                    "Id",
                    null,
                    new { @class="form-control", @id= "inputId" })
            </div>
            <div class="form-group col-md-11 col-md-offset-1">
                <label for="inputName">ADDRESS</label>
                @Html.TextBox(
                    "Address",
                    null,
                    new { @class="form-control", @id= "inputName" })
            </div>
            <button type="submit" class="btn btn-primary col-md-offset-1">Login</button>
        }
    </div>
    <div class="col-lg-3"></div>
</div>