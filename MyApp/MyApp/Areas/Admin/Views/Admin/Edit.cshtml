@model MyApp.Areas.Admin.Models.EditPageViewModel
<h2>Edit</h2>
<div class="row">
    @using (Html.BeginForm("Edit", "Admin", FormMethod.Post))
    {
        <div class="form-group col-md-11 col-md-offset-1">
            @Html.LabelFor(m => m.Title)
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
        </div>
        <div class="form-group col-md-11 col-md-offset-1">
            @Html.LabelFor(m => m.Description);
            @Html.TextBoxFor(m => m.Description, new { @class = "form-control", @style = "height:150px;" })
        </div>
        <div class="form-group col-md-11 col-md-offset-1">
            @Html.LabelFor(m => m.Profile_1)
            @Html.TextBoxFor(m => m.Profile_1, new { @class = "form-control", @style = "height:150px;" })
        </div>
        <button type="submit" class="btn btn-primary col-md-offset-4">Save</button>
    }
</div>